pipeline {
    agent any

    environment {
        GIT_CREDENTIALS = credentials('BhanuPDas')
    }
    tools {
                nodejs 'Node21'
            }

    stages {
        stage('Build') {
            steps {
                sh "npm install"
            }
        }

        stage('Test') {
            steps {
                sh "npm test"
            }
        }
    }

    post {
        always {
            echo "Pipeline has completed"
        }
    }
}
